{
	"compilerOptions": {
		"typeRoots": ["src/types"],
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"module": "CommonJS",
		"esModuleInterop": true,
		"target": "es2017",
		"lib": ["ES6"],
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"rootDir": "src",
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*"]
		}
	},
	"include": ["src"],
	"compileOnSave": true,
	"rules": {
		"no-unused-vars": "off"
	}
}
